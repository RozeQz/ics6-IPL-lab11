<p id="notice"><%= notice %></p>

<h1>Palindromes</h1>

<table>
  <thead align="center">
    <tr>
      <th>Введено</th>
      <th>Результат</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @palindromes.each do |palindrome| %>
      <tr>
        <td><%= palindrome.input %></td>
        <td><%= palindrome.output %></td>
        <td><%= link_to 'Посмотреть', palindrome, class: 'btn btn-link btn-sm' %></td>
        <td><%= link_to 'Удалить', palindrome, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-link btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= link_to 'Ввести новое число', new_palindrome_path, class: 'btn btn-link btn-sm' %>
</div>
